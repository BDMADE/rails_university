<p id="notice"><%= notice %></p>

<% if user_signed_in? %>
    <h1>Listing Courses</h1>

    <table>
      <thead>
      <tr>
        <th>Name</th>
        <th>Code</th>
        <th>Start</th>
        <th>End</th>
        <th>Course img</th>
        <!--<th>About</th>
        <th>Details</th>
        <th>Objective</th>
        <th>Prerequisites</th>
        <th>System</th>
        <th>Agenda</th>
        <th>Faq</th>-->
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @courses.each do |course| %>
          <tr>
            <td><%= course.name.html_safe %></td>
            <td><%= course.code.html_safe %></td>
            <td><%= course.start %></td>
            <td><%= course.end %></td>
            <td><%= course.course_img %></td>
            <!--<td><%= course.about %></td>
        <td><%= course.details %></td>
        <td><%= course.objective %></td>
        <td><%= course.prerequisites %></td>
        <td><%= course.system %></td>
        <td><%= course.agenda %></td>
        <td><%= course.faq %></td>-->
            <td><%= link_to 'Show', course %></td>
            <td><%= link_to 'Edit', edit_course_path(course) %></td>
            <td><%= link_to 'Destroy', course, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Course', new_course_path %>

<% else %>

    <!--START MAIN CONTENT SECTION-->
    <div id="main" class="container" role="main">
      <div class="row">
        <div class="col-sm-12">
          <h1 class="text-center">Online Course Catalog</h1>
        </div>
      </div>


      <% @courses.each do |course| %>
          <div class="media media-vert-divider vert-offset-6 course-description" id="course-<%= course.code %>">
            <a href="<%= course_path(course.id) %>" class="pull-left">

              <img src="/assets/<%= course.course_img %>" alt="<%= course.name %>" class="img-thumbnail-md media-object" />
            </a>

            <div class="media-body">
              <h3 class="media-heading"><a href="<%= course_path(course.id) %>"><%= course.code %>: <%= course.name %></a></h3>
              <em>
                Introductory
              </em>

              <p><%= course.about.html_safe %></p>
            </div>
          </div>
      <% end %>


    </div>
    <!--END MAIN CONTENT SECTION-->






<% end %>